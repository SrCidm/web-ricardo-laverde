---
const TOTAL_FRAMES = 25;
const FRAME_PREFIX = 'ezgif-frame-';
const FRAME_EXTENSION = 'jpg';
const FRAMES_FOLDER = '/frames/';
// Asegura que el padding sea correcto (si tus archivos son 001, 002... usa 3)
const LAST_FRAME = `${FRAMES_FOLDER}${FRAME_PREFIX}025.${FRAME_EXTENSION}`; 
---

<div class="fixed inset-0 z-[-1]">
  <img 
    src={LAST_FRAME}
    alt="Background"
    class="w-full h-full object-cover opacity-100" 
  />
  <div class="absolute inset-0 bg-laverde-black/50"></div>
</div>

<!-- 
  DEBUG: Si ves imagen rota, verifica que existe:
  public/frames/ezgif-frame-025.jpg
  
  La ruta generada es: {LAST_FRAME}
-->