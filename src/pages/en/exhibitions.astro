---
// Exhibitions Page - Ricardo Laverde Laguna (English)
// "Coming Soon" version

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import BackgroundFrame from '../../components/BackgroundFrame.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const title = 'Exhibitions | Ricardo Laverde Laguna';
const description = 'Upcoming exhibitions by Ricardo Laverde Laguna. Kinetic art and contemporary sculpture.';
---

<Layout title={title} description={description} lang="en">
  <BackgroundFrame />
  <Header />
  
  <main class="pt-24 relative z-10 min-h-screen bg-laverde-black/40">
    
    <section class="py-16 md:py-24 bg-laverde-black/80 backdrop-blur-sm">
      <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-sm uppercase tracking-[0.3em] text-laverde-blue mb-4">Shows & Events</p>
          <h1 class="font-display text-4xl md:text-5xl lg:text-6xl mb-6">Exhibitions</h1>
        </div>
      </div>
    </section>
    
    <section class="py-16 md:py-24 bg-laverde-black/80 backdrop-blur-sm">
      <div class="section-container">
        <div class="max-w-2xl mx-auto text-center">
          <div class="mb-8 relative inline-block">
            <div class="w-24 h-24 border border-laverde-blue/30 rounded-full flex items-center justify-center mx-auto">
              <div class="w-16 h-16 border border-laverde-blue/50 rounded-full flex items-center justify-center animate-pulse">
                <svg class="w-8 h-8 text-laverde-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            </div>
            <div class="absolute -inset-4 bg-laverde-blue/5 rounded-full blur-xl -z-10"></div>
          </div>
          
          <h2 class="text-2xl md:text-3xl font-display mb-4">Coming Soon</h2>
          <p class="text-laverde-white/60 text-lg leading-relaxed mb-8">
            I'm preparing new exhibitions that will be announced soon. 
            In the meantime, I invite you to explore my collection of works and learn more about my creative process.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/en/works" class="btn-primary">Explore Works</a>
            <a href="/en/about" class="btn-secondary">Meet the Artist</a>
          </div>
        </div>
      </div>
    </section>
    
    <section class="py-16 md:py-24 bg-laverde-black/70 backdrop-blur-sm">
      <div class="section-container">
        <div class="max-w-xl mx-auto text-center">
          <h3 class="text-xl font-display mb-4">Want to be the first to know?</h3>
          <p class="text-laverde-white/60 mb-8">Leave your email and I'll notify you when I announce new exhibitions.</p>
          
          <form id="notify-form" class="flex flex-col sm:flex-row gap-3">
            <input type="email" name="email" required placeholder="your@email.com" class="flex-1 bg-laverde-black/50 border border-laverde-gray-light/30 px-4 py-3 text-laverde-white placeholder-laverde-white/30 focus:outline-none focus:border-laverde-blue transition-colors" />
            <button type="submit" class="btn-primary whitespace-nowrap">Notify Me</button>
          </form>
          
          <div id="notify-success" class="hidden mt-6 p-4 bg-laverde-blue/20 border border-laverde-blue/30 rounded-sm">
            <p class="text-laverde-white text-sm">Perfect! I'll let you know when there's news.</p>
          </div>
        </div>
      </div>
    </section>
    
    <section class="py-16 md:py-24 bg-laverde-black/40 backdrop-blur-sm">
      <div class="section-container">
        <div class="text-center mb-12">
          <h3 class="text-xl font-display text-laverde-white/80">Meanwhile, explore</h3>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <a href="/en/works" class="group p-8 border border-laverde-gray-light/20 rounded-sm hover:border-laverde-blue/50 transition-all duration-300 bg-laverde-black/30">
            <div class="w-12 h-12 bg-laverde-blue/20 rounded-full flex items-center justify-center mb-4 group-hover:bg-laverde-blue/30 transition-colors">
              <svg class="w-6 h-6 text-laverde-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-display text-lg mb-2 group-hover:text-laverde-blue transition-colors">Gallery</h4>
            <p class="text-laverde-white/60 text-sm">67 pieces of kinetic art and light sculpture.</p>
          </a>
          
          <a href="/en/about" class="group p-8 border border-laverde-gray-light/20 rounded-sm hover:border-laverde-blue/50 transition-all duration-300 bg-laverde-black/30">
            <div class="w-12 h-12 bg-laverde-red/20 rounded-full flex items-center justify-center mb-4 group-hover:bg-laverde-red/30 transition-colors">
              <svg class="w-6 h-6 text-laverde-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h4 class="font-display text-lg mb-2 group-hover:text-laverde-red transition-colors">About the Artist</h4>
            <p class="text-laverde-white/60 text-sm">My story, training and artistic philosophy.</p>
          </a>
          
          <a href="/en/contact" class="group p-8 border border-laverde-gray-light/20 rounded-sm hover:border-laverde-blue/50 transition-all duration-300 bg-laverde-black/30">
            <div class="w-12 h-12 bg-laverde-yellow/20 rounded-full flex items-center justify-center mb-4 group-hover:bg-laverde-yellow/30 transition-colors">
              <svg class="w-6 h-6 text-laverde-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="font-display text-lg mb-2 group-hover:text-laverde-yellow transition-colors">Contact</h4>
            <p class="text-laverde-white/60 text-sm">Interested in a work or collaboration?</p>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  const form = document.getElementById('notify-form');
  const success = document.getElementById('notify-success');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    form.classList.add('hidden');
    success?.classList.remove('hidden');
  });
</script>