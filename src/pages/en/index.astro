---
// Home Page - English Version
// Ricardo Laverde Laguna | Contemporary Art

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Gallery from '../../components/Gallery.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const title = 'Ricardo Laverde Laguna | Contemporary Art';
const description = 'Explore the artistic universe of Ricardo Laverde Laguna, contemporary sculptor specialized in kinetic art, light works and methacrylate sculptures. JÃ¡vea, Spain.';
---

<Layout title={title} description={description} lang="en">
  <Header />
  
  <main>
    <Hero />
    
    <div class="relative z-20">
      <Gallery limit={12} />
    </div>
    
    <section class="relative z-20 py-24 md:py-32 bg-laverde-black/80 backdrop-blur-sm">
      <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div class="animate-on-scroll">
            <div class="aspect-[4/5] overflow-hidden">
              <img 
                src="/images/artist/ricardo-01.jpg" 
                alt="Ricardo Laverde Laguna - Contemporary Sculptor"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
          
          <div class="animate-on-scroll space-y-6">
            <h2 class="section-title">About the Artist</h2>
            
            <blockquote class="text-2xl md:text-3xl font-display italic text-laverde-blue leading-relaxed">
              "Movement is in the eyes of the beholder, not in the piece."
            </blockquote>
            
            <p class="text-laverde-white/70 leading-relaxed">
              Ricardo Laverde Laguna is a contemporary sculptor whose work explores the intersection between light, 
              space and transparent materials. Trained in goldsmithing and architecture, his work is 
              inscribed in the tradition of kinetic art, creating pieces that challenge visual perception.
            </p>
            
            <a href="/en/about" class="btn-primary inline-block">
              Learn more
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <section class="relative z-20 py-24 md:py-32 bg-laverde-black/80 backdrop-blur-sm overflow-hidden">
      <div class="absolute inset-0 opacity-5">
        <div class="absolute top-0 right-0 w-96 h-96 border border-laverde-blue rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 border border-laverde-red rounded-full translate-y-1/2 -translate-x-1/2"></div>
      </div>
      
      <div class="section-container relative z-10">
        <div class="text-center max-w-2xl mx-auto animate-on-scroll">
          <h2 class="text-3xl md:text-4xl font-display mb-6">
            Interested in a piece?
          </h2>
          <p class="text-laverde-white/60 mb-8">
            For inquiries about available works, custom commissions or artistic collaborations.
          </p>
          <a href="/en/contact" class="btn-primary">
            Contact
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>